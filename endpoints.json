{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
          "slug": "football",
          "description": "Footie!"
        }
      ]
    }
  },
  "GET /api/users/:username": {
    "description": "serves information about a user",
    "exampleResponse": {
      "user": {
        "username": "weegembump",
        "name": "John Smith",
        "avatar_url": "https://avatars2.githubusercontent.com/u/5843785?s=400&v=4"
      }
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": [
      "author",
      "topic",
      "sort_by",
      "order"
    ],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": 1527695953341,
          "comment_count": 12
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves the article with the specified id",
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": 1527695953341
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves comments on an article",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 11,
          "author": "weegembump",
          "votes": -5,
          "created_at": "2003-11-26T12:36:03.389Z",
          "body": "Whom."
        }
      ]
    }
  },
  "GET /api/comments/:comment_id": {
    "description": "serves the comment with the specified id",
    "exampleResponse": {
      "comment": {
        "comment_id": 11,
        "author": "weegembump",
        "votes": -5,
        "created_at": "2003-11-26T12:36:03.389Z",
        "body": "Whom."
      }
    }
  }
}